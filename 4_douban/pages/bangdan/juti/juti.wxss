.topimg{
  width: 100%;
  height: 180px;
}
.bangJumpPu{
  padding: 15px;
}
.bangJumpPuTitle{
  width: 100%;
  height: 50px;
  border: 1px solid #EDE9DC;
  border-radius: 3px;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  margin-bottom: 10px;
}
.userTouxiang{
  width: 30px;
  height: 30px;
  margin: 0 10px 0;
}
.userLooking{
  font-size: 14px;
}
.bangJumpAll{
  padding: 10px 0;
  border-bottom: 1px solid #EBEAE7;
}
.paiming{
  display: block;
  width: 40px;
  height: 20px;
  background-color: #FFC67D;
  color: #615E5B;
  font-size: 12px;
  border-radius: 3px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:15px; 
}
.jieshao{
  display: flex;
  justify-content: space-around;
}
.tupian{
  width: 70px;
  height: 90px;
}
.right{
  width: 70%;
  font-size: 12px;
}
.right>text{
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.movieNews{
  display: flex;
  justify-content: space-between;
}
.movieName{
  font-size: 15px;
  font-weight: 700;
}
.looked{
  padding: 3px 20px;
  color: orange;
  font-size: 10px;
  border: 1px solid orange;
  border-radius: 3px;
}
.score{
  font-size: 10px;
  margin: 5px 0;
}
.leixing{
  color: #BAB7B3;
}
.xiwang{
  padding: 8px 10px;
